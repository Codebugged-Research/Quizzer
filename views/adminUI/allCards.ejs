<%- include("./partials/header") %>
    <style>
        .card-img-top {
            width: 100%;
            height: 15vw;
            object-fit: cover;
        }
    </style>
    <div class="container">
        <h1 class="text-center">All Cards</h1>
        <div class="row">
            <% cards.forEach(function(card){ %>
                <div class="col-md-6 col-lg-4">
                    <div class="card text-center">
                        <img alt="Card image cap" class="card-img-top img-fluid" src="<%= card.imageURL %>" />
                        <div class="card-block">
                            <p class="card-text">
                                <form action="/file/<%=card._id%>?_method=DELETE" method="POST">
                                    <button class="btn btn-danger">Delete</button>
                                </form>
                            </p>
                        </div>
                    </div>
                </div>
                <% }) %>

        </div>
    </div>
    <%- include("./partials/footer") %>