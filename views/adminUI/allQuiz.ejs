<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Quiz</title>
    <link href="/stylesheets/main.css" type="text/css" rel="stylesheet">
    <style>
        a.disable {
            pointer-events: none;
        }
    </style>
</head>
<%- include("./partials/header") %>
    <div class="container">
        <div class="page-title-heading">
            <h1>All Quizzes</h1>
        </div>
        <form action="/quiz/date" method="POST">
            <label for="date">Date:</label>
            <input type="date" name="date">
            <button type="submit" class="btn btn-success d-inline">Search</button>
        </form>


        <div class="row">
            <% allQuiz.forEach(function(quiz) { %>

                <div class="col-sm-6">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">
                                <%= quiz.name %>
                            </h5>
                            <p class="card-text">Quiz Slot:
                                <%= quiz.slot %>
                            </p>
                            <p class="card-text">Quiz Reward:
                                <%= quiz.reward %>
                            </p>
                            <p class="card-text">
                                <%= quiz.date %>
                            </p>
                            <a href="/quiz/<%= quiz._id %>" class="btn btn-primary">More Info</a>
                        </div>
                    </div>
                </div>



                <% }) %>
        </div>
        <nav aria-label="Page navigation example">
            <ul class="pagination">
                <% if(prev >= 1) { %>
                    <li class="page-item">
                        <a class="page-link" href="/quiz/page/<%= prev %>" aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                            <span class="sr-only">Previous</span>
                        </a>
                    </li>
                    <% } %>
                        <% if(prev < 1) { %>
                            <li class="page-item">
                                <a class="page-link disable" href="/quiz/page/<%= prev %>" aria-label="Previous">
                                    <span aria-hidden="true">&laquo;</span>
                                    <span class="sr-only">Previous</span>
                                </a>
                            </li>
                            <% } %>
                                <li class="page-item"><a class="page-link" href="/quiz/page/1">1</a></li>
                                <% if(pages >= 2) { %>
                                    <li class="page-item"><a class="page-link" href="/quiz/page/2">2</a></li>
                                    <% } %>
                                        <% if(pages < 2) { %>
                                            <li class="page-item "><a class="page-link disable" href="#">2</a></li>
                                            <% } %>
                                                <% if(pages >= 3) { %>
                                                    <li class="page-item"><a class="page-link" href="/quiz/page/3">3</a></li>
                                                    <% } %>
                                                        <% if(pages < 3) { %>
                                                            <li class="page-item"><a class="page-link disable" href="/quiz/page/3">3</a></li>
                                                            <% } %>
                                                                <% if(next<=pages) { %>
                                                                    <li class="page-item">
                                                                        <a class="page-link" href="/quiz/page/<%= next %>" aria-label="Next">
                                                                            <span aria-hidden="true">&raquo;</span>
                                                                            <span class="sr-only">Next</span>
                                                                        </a>
                                                                    </li>
                                                                    <% } %>
                                                                        <% if(next>pages) { %>
                                                                            <li class="page-item">
                                                                                <a class="page-link disable" href="#" aria-label="Next">
                                                                                    <span aria-hidden="true">&raquo;</span>
                                                                                    <span class="sr-only">Next</span>
                                                                                </a>
                                                                            </li>
                                                                            <% } %>
            </ul>
        </nav>
    </div>
    <%- include("./partials/footer") %>