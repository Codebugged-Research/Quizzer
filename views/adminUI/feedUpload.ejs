<%- include("./partials/header") %>


    <div class="col-md-6 offset-md-3 mt-5">
        <h2>Upload File for feed :</h1>
            <hr>
            <form accept-charset="UTF-8" action="/feed/upload" method="POST" target="_blank" enctype='multipart/form-data'>
                <div class="form-group">
                    <label for="exampleInputName">File Name:</label>
                    <input type="text" name="fullname" class="form-control" id="exampleInputName" placeholder="Enter a caption for the given file" required="required">
                </div>
                <hr>
                <div class="form-group mt-3">
                    <label class="mr-2">Upload your file:</label>
                    <input type="file" id="file" name="file" enctype="multipart/form-data">
                </div>
                <hr>
                <button type="submit" class="btn btn-primary">Upload</button>
            </form>
    </div>
    </div>
    <script>
        document.getElementById('file').addEventListener('change', readFile, false);

        function readFile(evt) {
            var files = evt.target.files;
            var file = files[0];
            var reader = new FileReader();
            reader.onload = function(event) {
                console.log(event.target.result);
            }
            reader.readAsText(file)
        }
    </script>
