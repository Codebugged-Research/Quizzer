<%- include("./partials/header") %>
    <div class="container">
        <h1 class="jumbotron d-flex justify-content-center">Create Quiz</h1>


        <form action="/quiz" method="POST">
            <div class="form-group">
                <label for="quiz-name">Add name for quiz</label>
                <input type="text" class="form-control" name="name" id="quiz-name">
            </div>
            <div class="form-group">
                <label for="exampleFormControlSelect1">Slect Slot/type of Quiz</label>
                <select class="form-control" id="exampleFormControlSelect1" name="slot">
                <option>1</option>
                <option>2</option>
                <option>3</option>
                <option>4</option>
                <option>5</option>
                </select>
            </div>
            <div class="form-group">
                <label for="rewardColumn">Add the reward amount for this quiz</label>
                <input type="text" id="rewardColumn" class="form-control" name="reward">
            </div>
            <div class="form-group">
                <label for="rewardColumn">Add marks to be awarded for each correct answer</label>
                <input type="text" id="rewardColumn" class="form-control" name="correct_score">
            </div>
            <div class="form-group">
                <label for="rewardColumn">Add marks to be deducted for each wrong answer</label>
                <input type="text" id="rewardColumn" class="form-control" name="incorrect_score">
            </div>
