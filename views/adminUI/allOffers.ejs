                                            <%= offer.start %>
                                        </td>
                                        <td class="column5">
                                            <%= offer.end %>
                                        </td>
                                        <td class="column6">
                                            <%= offer.redeems %>
                                        </td>
                                    </tr>
                                    <% }) %>


                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>




