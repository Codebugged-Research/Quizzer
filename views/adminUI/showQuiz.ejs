<%- include("./partials/header") %>
    <div class="container">
        <div class="row">
            <div class="col-md-3">
                <p class="lead">
                    <%= quiz.name %>
                </p>
                <div class="list-group">
                    <li class="list-group-item active">Info 1</li>
                    <li class="list-group-item">Info 2</li>
                    <li class="list-group-item">Info 3</li>
                </div>
            </div>
            <div class="col-md-9">
                <div class="thumbnail">
                    <div class="caption">
                        <h4 class="pull-right">
                            Reward :
                            <%= quiz.reward %>
                        </h4>
                        <p>
                            Quiz Slot :
                            <%= quiz.slot %>
                        </p>

                        <a class="btn btn-warning" href="/quiz/<%= quiz._id %>/edit">Edit</a>
                        <form class="delete-form" action="/quiz/<%=quiz._id%>?_method=DELETE" method="POST">
                            <button class="btn btn-danger">Delete Quiz</button>
                        </form>
                    </div>
                </div>
                <div class="well">
                    <div class="text-right">
                        <a class="btn btn-success" href="/quiz/<%= quiz._id %>/questions/add">Add new question</a>
                    </div>
                </div>
            </div>
        </div>
        <% quiz.questions.forEach(function(question) { %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                    <ul class="list-group">
                        <h4>
                            <%= question.description %>
                        </h4>
                        <li class="list-group-item">
                            <%= question.options[0] %>
                        </li>
                        <li class="list-group-item">
                            <%= question.options[1] %>
                        </li>
                        <li class="list-group-item">
                            <%= question.options[2] %>
                        </li>
                        <li class="list-group-item">
                            <%= question.options[3] %>
                        </li>
                        <p>The correct answer :
                            <%= question.answer %>
                        </p>
                    </ul>
                    <form style="display: inline" class="pull-right" action="/quiz/<%=quiz._id%>/questions/<%=question._id%>?_method=DELETE" method="POST">
                        <button class="btn btn-xs btn-danger">DELETE</button>
                        <a href="/quiz/<%= quiz._id %>/questions/<%= question._id %>/edit" class="btn btn-xs btn-info">EDIT</a>
                    </form>
                </div>
            </div>
            <% }) %>
    </div>

    <%- include("./partials/footer") %>